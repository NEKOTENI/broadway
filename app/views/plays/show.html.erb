<div class="row">
  <div class="col-md-4">
    <%= image_tag @play.play_img.url(:play_show), class: "play-show" %>
  </div>

  <div class="col-md-8">
    <div class="play-info">
      <h2 class="play-titile"><%= @play.title %></h2>
      <h3 class="play-director"><span>From </span><%= @play.director %></h3>
      <h4 class="play-director"><%= @play.category.name %></h4>
      <p class="play-desc"><%= @play.description %></p>
  </div>
</div>

<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @play.user_id == current_user.id %>
      <%= link_to "編集する", edit_play_path(@play), class: "btn btn-custom" %>
      <%= link_to "削除する", play_path(@play), method: :delete, data: { confirm: "本当に削除してもいいですか？" }, class: "btn btn-custom" %>
    <% end %>
  <% end %>
</div>
